<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Image_View_V1._0.View.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:Image_View_V1._0.Model"
    xmlns:viewmodel="clr-namespace:Image_View_V1._0.ViewModel"
    x:DataType="viewmodel:ImagesViewModel">
    
    <AbsoluteLayout>
        <Button Text="Get Image" 
                Command="{Binding GetImageCommand}"
                IsEnabled="{Binding IsNotBusy}"
                
                Style="{StaticResource ButtonOutline}"
                Margin="8"/>
    </AbsoluteLayout>

    
</ContentPage>
